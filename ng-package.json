{
  "$schema": "./node_modules/ng-packagr/ng-package.schema.json",
  "dest": "dist",
  "lib": {
    "entryFile": "src/public-api.ts"
  },
  "assets": [
    {
      "input": "src/styles",
      "glob": "**/*.scss",
      "output": "styles"
    },
    {
      "input": "src/app/features",
      "glob": "**/*.scss",
      "output": "app/features"
    }
  ]
}
